# ------------------------------------------------------------------------------
# Media Keys

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/polybar/scripts/pavolume.sh --up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/polybar/scripts/pavolume.sh --down
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pacmd list-sinks | awk '/* index:/{print $3}') toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
bindsym $mod+t exec ~/.config/i3/scripts/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# PrintScreen controls
bindsym --release Print exec scrot -q 100 --silent $HOME/Pictures/`date +%Y-%m-%d_%H:%M:%S`.png
bindsym --release Shift+Print exec scrot -q 100 --silent --select $HOME/Pictures/`date +%Y-%m-%d_%H:%M:%S`.png -e 'xclip -selection clipboard -t image/png -i $f; rm $f'

