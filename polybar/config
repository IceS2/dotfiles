[colors]
color0 = ${xrdb:color0}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
color7 = ${xrdb:color7}
color8 = ${xrdb:color8}
color9 = ${xrdb:color9}
color10 = ${xrdb:color10}
color11 = ${xrdb:color11}
color12 = ${xrdb:color12}
color13 = ${xrdb:color13}
color14 = ${xrdb:color14}
color15 = ${xrdb:color15}
background = ${xrdb:color0}
;background = #383C4A
background-alt = #000000 
foreground = ${xrdb:color15}
foreground-alt = #FFFFFF

[bar/top-bar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius-top = 0.0
radius-bottom = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.foreground}

border-left-size = 0
border-top-size = 0
border-right-size = 0
border-bottom-size = 0  
border-color = #00000000

padding-left = 2
padding-right = 1

module-margin-left = 1
module-margin-right = 2

font-0 = FontAwesome:size=16;3 
font-1 = SFNS Display:size=12;2

modules-left = filesystem archupdates spotify
modules-center = i3
modules-right = networkmanager pavolume bluetooth battery date menu

;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 10
fixed-values = true
format-mounted = <label-mounted>
label-mounted = %{F#D3D3D3}%{F-} %percentage_used%%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.foreground} 
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline = ${colors.foreground}
label-focused-padding = 10

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-unfocused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.color10}

label-urgent-padding = 2

[module/archupdates]
type = custom/script
exec = ~/.config/polybar/scripts/archupdates.sh
interval = 600

[module/networkmanager]
type = custom/script
exec = ~/.config/polybar/scripts/networkmanager.sh
interval = 1
click-left = exec networkmanager_dmenu

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down
master-mixer = Master

[module/date]
type = internal/date
interval = 1

date = " %A %b %d, "

time = "%H:%M:%S"

format-prefix = 
format-prefix-foreground = ${colors.foreground}
;format-underline = #0a6cf5

label = "%{A:/usr/bin/gsimplecal &:}%{F#D3D3D3}%{F-}%date% %time%%{A}"

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

label-charging = "%percentage%%"
label-discharging = "%percentage%%"
; label-full = ''

format-charging = "%{F#FFFFFF} <animation-charging>%{F-} <label-charging>"
;format-charging-underline = #ffb52a

format-discharging = <ramp-capacity> <label-discharging>
; format-discharging-underline = ${self.format-charging-underline}

format-full = %{F#FFFFFF}<ramp-capacity>%{F-}
; format-full-underline = ${self.format-charging-underline}
; format-full-prefix = " "
; format-full-prefix-foreground = ${colors.foreground-alt}
; format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = %{F#B30000}%{F-}
ramp-capacity-1 = %{F#B30000}%{F-}
ramp-capacity-2 = %{F#FBFBCC}%{F-}
ramp-capacity-3 = %{F#FBFBCC}%{F-}
ramp-capacity-4 = %{F#FFFFFF}%{F-}
; ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 =  
animation-charging-4 = 
; animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/spotify]
type = custom/script
interval = 1
label = %output:0:45:...%
exec = ~/.config/polybar/scripts/spotify.sh
click-left = playerctl play-pause
click-right = playerctl previous
click-middle = playerctl next
;scroll-up = playerctl prev
;scroll-down = playerctrl next

[module/menu]
type = custom/menu
expand-right = true
menu-0-0 = %{F#3C3C3C}%{F-}
menu-0-0-exec = systemctl poweroff -i
menu-0-1 = %{F#3C3C3C}%{F-}
menu-0-1-exec = reboot
menu-0-2 = %{F#3C3C3C}%{F-}
menu-0-2-exec = i3-msg exit
label-separator = %{F#3C3C3C}|%{F-}
label-separator-margin = 1
format = <label-toggle> <menu>
format-padding = 1
label-open = %{F#3C3C3C}%{F-}
label-close = %{F#3C3C3C}%{F-}

[module/bluetooth]
type = custom/script
interval = 1
exec = ~/.config/polybar/scripts/bluetooth.sh
click-left = /usr/bin/blueman-manager

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

